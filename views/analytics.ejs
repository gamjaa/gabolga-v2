<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-41331721-6"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-41331721-6');
  <% if (req.session.user_id) { %>
    gtag('set', {'user_id': '<%= req.session.user_id %>'}); // 로그인한 User-ID를 사용하여 User-ID를 설정합니다.
  <% } %>
</script>
